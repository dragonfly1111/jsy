<view class="address_box"><cu-custom vue-id="1" bgColor="bg-gradual-blue" isBack="{{true}}" bind:__l="__l" vue-slots="{{['content']}}"><view slot="content">添加收货地址</view></cu-custom><view class="address_bg"></view><view class="form_box"><view class="row"><text class="title">收货人</text><input type="text" data-event-opts="{{[['input',[['__set_model',['','userName','$event',[]]]]]]}}" value="{{userName}}" bindinput="__e"/></view><view class="row"><text class="title">手机号</text><input type="number" data-event-opts="{{[['input',[['__set_model',['','userTel','$event',[]]]]]]}}" value="{{userTel}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['showAddress',['$event']]]]]}}" class="row" bindtap="__e"><text class="title">所在地区</text><input type="text" disabled="true" data-event-opts="{{[['input',[['__set_model',['','userArea','$event',[]]]]]]}}" value="{{userArea}}" bindinput="__e"/><image src="../../static/details/arrow.png" mode></image></view><view class="row"><textarea placeholder="详细地址:如道路,门牌号,小区,楼栋号,单元室等" data-event-opts="{{[['input',[['__set_model',['','userAddress','$event',[]]]]]]}}" value="{{userAddress}}" bindinput="__e"></textarea></view></view><view class="default_address"><text>设为默认地址</text><switch class="red" checked="{{ischecked}}" data-event-opts="{{[['change',[['isDefault',['$event']]]]]}}" bindchange="__e"></switch></view><view class="foot_btn"><text data-event-opts="{{[['tap',[['submitAddress']]]]}}" bindtap="__e">保存</text></view><view class="foot_btn clear_btn"><block wx:if="{{addressType=='edit'}}"><text data-event-opts="{{[['tap',[['clearAddress']]]]}}" bindtap="__e">删除</text></block></view><picker-address bind:confirm="__e" bind:input="__e" vue-id="2" value="{{addressShow}}" data-event-opts="{{[['^confirm',[['addresspick']]],['^input',[['__set_model',['','addressShow','$event',[]]]]]]}}" bind:__l="__l"></picker-address></view>