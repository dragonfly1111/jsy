<view class="cart_box"><cu-custom vue-id="1" bgColor="bg-gradual-blue" isBack="{{false}}" bind:__l="__l" vue-slots="{{['content']}}"><view slot="content">购物车</view></cu-custom><view class="goodsList" true><checkbox-group data-event-opts="{{[['change',[['getCheck',['$event']]]]]}}" bindchange="__e"><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="row"><image class="clear" src="../../static/com/clear.png" mode data-event-opts="{{[['tap',[['clearCartList',['$0'],[[['cartList','id',item.$orig.id,'id']]]]]]]}}" bindtap="__e"></image><view class="left"><checkbox class="round blue" checked="{{item.g0}}" value="{{item.g1}}"></checkbox><image src="{{imgHttp+item.$orig.cover}}" mode data-event-opts="{{[['tap',[['to_goods',['$0'],[[['cartList','id',item.$orig.id,'itemid']]]]]]]}}" bindtap="__e"></image></view><view class="center"><view class="good"><text class="title">{{item.$orig.name}}</text><text class="sub_title">{{item.g2}}</text></view><view class="price">{{"￥"+item.$orig.sellingprice}}<text class="unit">{{"/"+item.$orig.unit}}</text></view></view><view class="right"><view data-event-opts="{{[['tap',[['reduceNum',[index,'$0'],[[['cartList','id',item.$orig.id,'num']]]]]]]}}" class="reduce" bindtap="__e"><text>-</text></view><view class="num"><text>{{item.$orig.num}}</text></view><view data-event-opts="{{[['tap',[['addNum',[index,'$0'],[[['cartList','id',item.$orig.id,'num']]]]]]]}}" class="add" bindtap="__e"><text>+</text></view></view></view></block></checkbox-group></view><block wx:if="{{isLogin==true&&cartList.length!=0}}"><view class="foot_box"><view class="left"><checkbox-group name data-event-opts="{{[['change',[['all',['$event']]]]]}}" bindchange="__e"><label><checkbox class="round blue" checked="{{allCheckbox}}" value="all"></checkbox><text>全选</text></label></checkbox-group></view><view class="right"><text class="sub_title">合计</text><text class="price">{{"￥"+endPrice}}</text><text data-event-opts="{{[['tap',[['to_details']]]]}}" class="btn" bindtap="__e">去结算</text></view></view></block><block wx:if="{{isLogin==false}}"><view class="no_data"><image src="../../static/com/emptyCart.jpg" mode></image><button class="cu-btn bg-golden margin-tb-sm lg" open-type="getUserInfo" data-event-opts="{{[['getuserinfo',[['getinfo',['cart']]]]]}}" bindgetuserinfo="__e">亲，去授权</button></view></block><block wx:if="{{cartList.length==0&&isLogin==true}}"><view class="no_data"><image src="../../static/com/emptyCart.jpg" mode></image><button data-event-opts="{{[['tap',[['to_home']]]]}}" class="cu-btn bg-golden margin-tb-sm lg" bindtap="__e">购物车空空如也，去逛逛</button></view></block><view class="{{['cu-modal',modalName=='Modal'?'show':'']}}"><view class="cu-dialog"><view class="cu-bar bg-white justify-end"><view class="content">友情提示</view><view data-event-opts="{{[['tap',[['closeDoLogin',['$event']]]]]}}" class="action" bindtap="__e"><text class="cuIcon-close text-golden"></text></view></view><view class="padding-xl"><view>您还不是三源会员，无法购买商品！</view><button data-event-opts="{{[['tap',[['to_member',['$event']]]]]}}" class="cu-btn bg-golden margin-tb-sm lg" bindtap="__e">立即开通会员</button></view></view></view></view>