page {
  background-color: #fff;
}
.banner {
  text-align: center;
}
.banner image {
  width: calc(100% - 60rpx);
  height: 433rpx;
  margin: 0 auto;
}
.search {
  width: 100%;
  left: 0;
  z-index: 9999;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 10rpx;
  margin-bottom: 36rpx;
}
.search input {
  background-color: #F1F1F1;
  width: calc(100% - 60rpx);
  border-radius: 40rpx;
  margin: 0 20rpx;
  padding-left: 30rpx;
  line-height: 40rpx;
}
.search image {
  width: 50rpx;
  height: 50rpx;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .breed-wrapper {
  width: 173rpx;
}
.content .breed-wrapper .breed-name {
  width: 100%;
  height: 104rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #f2f1f0;
  letter-spacing: 10rpx;
  color: #040000;
  margin-bottom: 4rpx;
}
.content .breed-wrapper .breed-name.active {
  color: #fff;
  background: #7b7634;
}
.content .goods-wrapper {
  width: calc(100% - 173rpx - 30rpx - 30rpx);
  margin-left: 30rpx;
  margin-right: 30rpx;
}
