  font-size: 20rpx;
  color: #81772b;
  font-weight: bold;
  margin-top: 20rpx;
  text-align: left;
}
.content .goods-wrapper .basis-df .info .goods-price {
  text-align: left;
  font-size: 17rpx;
  color: #9f9e9f;
  margin-bottom: 40rpx;
